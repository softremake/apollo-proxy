{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2017",
        "module": "commonjs",
        "lib": ["es2017", "dom"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "lib",
        "outDir": "lib",
        "typeRoots": [
            "node_modules/@types"
        ],
        "noImplicitAny": false,
        "strictNullChecks": false
    },
    "include": [
        "src"
    ]
}
